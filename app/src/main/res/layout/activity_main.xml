<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:background="@color/colorAccent">
    <LinearLayout
        android:id="@+id/layout_a"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        android:background="@color/colorAccentLight">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorCool"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Team A"
        android:textSize="28sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/board_score_a"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:hint="0"
        android:textSize="46sp"
        android:background="@color/colorCool"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/team_a_plus_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorCool"
        android:textColor="@android:color/white"
        android:text="+3 Points"
        android:onClick="a3Points"/>

    <Button
        android:id="@+id/team_a_plus_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorCool"
        android:textColor="@android:color/white"
        android:text="+2 Points"
        android:onClick="a2Points"/>

    <Button
        android:id="@+id/team_a_free_throw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorCool"
        android:textColor="@android:color/white"
        android:text="Free throw"
        android:onClick="afreeThrow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/layout_a"
        android:background="@color/colorAccentLight">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorCool"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="28sp"
            android:text="Team B"
            android:textColor="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/board_score_b"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorCool"
            android:hint="0"
            android:textSize="46sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorCool"
            android:textColor="@android:color/white"
            android:text="+3 Points"
            android:onClick="b3Points"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorCool"
            android:textColor="@android:color/white"
            android:text="+2 Points"
            android:onClick="b2Points"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorCool"
            android:textColor="@android:color/white"
            android:text="Free throw"
            android:onClick="bfreeThrow"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:background="@color/colorAccentLight"
        android:textColor="@android:color/white"
        android:text="Reset"
        android:onClick="reset"/>
</RelativeLayout>
